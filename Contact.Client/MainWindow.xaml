<Window x:Class="Contact.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <DataTemplate x:Key="UserItemTemplate">
                <WrapPanel>
                    <TextBlock Text ="{Binding Path=Id}"></TextBlock>
                    <TextBlock Text=" "></TextBlock>
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                </WrapPanel>
            </DataTemplate>
        </Grid.Resources>
        
        <Label Grid.Column="0" VerticalAlignment="Bottom" Content="{Binding Path=Me.role}"/>
        
        <Button 
            Grid.Column="0" 
            MaxHeight="20" MaxWidth="100" 
            Name="btnStartGame"
            Click="btnStartGame_Click">Go</Button>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Name="GameOver" Grid.Column="0">
            <Label HorizontalAlignment="Center">Раунд окончен!</Label>
            <Label Content="{Binding Path=PrimaryWord}"/>
            
            <Button Click="btnStartGame_Click" MaxWidth="200">Начать новый раунд</Button>
        </StackPanel>

        <StackPanel Grid.Column="0" Name="HaveCurrentWord">
            <Label Content="{Binding Path=PrimaryWordKnownLetters}"/>
            <Label Content="{Binding Path=Question}"></Label>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="txtAnswer" MinWidth="300"></TextBox>
                <Button Name="btnSubmitAnswer" Padding="10,0,10,0" Margin="20,0,0,0" Click="btnSubmitAnswer_Click">go</Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" Name="HaveCurrentWordVariant">
            <Label>Есть контакт!</Label>
        </StackPanel>

        <StackPanel Grid.Column="0" Name="VotingForPlayersWords" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Path=CurrentWord}"/>
                <Button Margin="5,0,0,0" Name="btnCurrentWordVoteUp" Click="btnCurrentWordVoteUp_Click">Up</Button>
                <Button Margin="5,0,0,0" Name="btnCurrentWordVoteDown" Click="btnCurrentWordVoteDown_Click">Down</Button>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="{Binding Path=VarOfCurWord}"/>
                <Button Margin="5,0,0,0" Name="btnVarOfCurWordVoteUp" Click="btnVarOfCurWordVoteUp_Click">Up</Button>
                <Button Margin="5,0,0,0" Name="btnVarOfCurWordVoteDown" Click="btnVarOfCurWordVoteDown_Click">Down</Button>
            </StackPanel>
        </StackPanel>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">
                <Label Name="lblUsersOnline">Online users</Label>
                <ListBox Name="lstUsersOnline" MinWidth="100" ItemsSource="{Binding Path=Users}" ItemTemplate="{StaticResource UserItemTemplate}"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Label Name="lblUsedWords">UsedWords</Label>
                <ListBox Name="lstUsedWords" MinWidth="100" ItemsSource="{Binding Path=UsedWords}"/>
            </StackPanel>
        </Grid>
        
       

    </Grid>
</Window>
