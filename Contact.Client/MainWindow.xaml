<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Contact.Client.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>

        <DataTemplate x:Key="RoomItemTemplate">
            <WrapPanel>
                <TextBlock Text="{Binding Id}"/>
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding Name}"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>

        <Grid.Resources>
            <DataTemplate x:Key="UserItemTemplate">
                <WrapPanel>
                    <TextBlock Text ="{Binding Id}"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding Name}"/>
                </WrapPanel>
            </DataTemplate>

            <DataTemplate x:Key="RoomItemTemplate">
                <WrapPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding Name}"/>
                </WrapPanel>
            </DataTemplate>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalAlignment="Bottom" Content="{Binding Me.role}" Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2" d:IsHidden="True"/>


        <Label Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="{Binding CurrentRoom.Name}" Margin="0,0,0.4,-0.2" d:IsHidden="True"/>

        <Button 
            Grid.Column="0" 
            MaxHeight="20" MaxWidth="100" 
            x:Name="btnStartGame"
            Click="btnStartGame_Click" RenderTransformOrigin="0.88,0.969" Content="Go" Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2" d:IsHidden="True"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="GameOver" Grid.Column="2" Margin="63.6,104,132.4,132.8" Height="84" Width="248" d:IsHidden="True">
            <Label HorizontalAlignment="Center" Content="Раунд окончен!" d:IsHidden="True"/>
            <Label Content="{Binding PrimaryWord}" Margin="10,0" Height="24" d:IsHidden="True"/>
            <Button Click="btnStartGame_Click" MaxWidth="200" Content="Начать новый раунд" Margin="59,10,63,0" d:IsHidden="True"/>
        </StackPanel>

        <StackPanel Grid.Column="0" x:Name="HaveCurrentWordVariant" Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2" d:IsHidden="True">
            <Label Content="Есть контакт!" d:IsHidden="True"/>
        </StackPanel>

        <StackPanel Grid.Column="0" x:Name="HaveCurrentWord" Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2" d:IsHidden="True">
            <Label Content="{Binding PrimaryWordKnownLetters}" d:IsHidden="True"/>
            <Label Content="{Binding Question}" d:IsHidden="True"/>
            <StackPanel Orientation="Horizontal" d:IsHidden="True">
                <TextBox x:Name="txtAnswer" MinWidth="300" d:IsHidden="True"/>
                <Button x:Name="btnSubmitAnswer" Padding="10,0,10,0" Margin="20,0,0,0" Click="btnSubmitAnswer_Click" Content="go" d:IsHidden="True"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" x:Name="QwestionerHaveCurrentWord" Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2" d:IsHidden="True">
            <Label Content="{Binding PrimaryWordKnownLetters}" d:IsHidden="True"/>
            <Label Content="{Binding CurrentWord}" d:IsHidden="True"/>
        </StackPanel>

        <StackPanel Grid.Column="0" x:Name="HaveNoCurrentWord" Margin="0,39,0.4,9.8" Grid.ColumnSpan="3" d:IsHidden="True">
            <Label Content="{Binding PrimaryWordKnownLetters}" d:IsHidden="True"/>
            <StackPanel Orientation="Vertical" d:IsHidden="True">
                <TextBox x:Name="txtQuestion" MinWidth="300" d:IsHidden="True"/>
                <TextBox x:Name="txtCurrentWord" MaxWidth="200" Margin="0,10,0,0" d:IsHidden="True"/>
                <Button x:Name="btnAskQuestion" MaxWidth="100" Margin="0,10,0,0" Click="btnAskQuestion_Click" Content="ask" d:IsHidden="True"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" x:Name="VotingForPlayersWords" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="63.6,88,132.4,112.8" Width="248" Height="120" d:IsHidden="True">
            <Label Content="Голосование за слова пользователей" Margin="10,0"/>
            <StackPanel Orientation="Horizontal" Margin="10,15,10,0">
                <Label Content="{Binding CurrentWord}" Width="148" Height="29"/>
                <Button Margin="5,0,0,0" x:Name="btnCurrentWordVoteUp" Click="btnCurrentWordVoteUp_Click" Content="Up" Width="32"/>
                <Button Margin="5,0,0,0" x:Name="btnCurrentWordVoteDown" Click="btnCurrentWordVoteDown_Click" Content="Down"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,9.8,0" Height="28">
                <Label Content="{Binding VarOfCurWord}" Width="149" Margin="0,0,0,-0.2"/>
                <Button Margin="5,0,0,-0.2" x:Name="btnVarOfCurWordVoteUp" Click="btnVarOfCurWordVoteUp_Click" Content="Up" Width="32"/>
                <Button Margin="5,0,0,0" x:Name="btnVarOfCurWordVoteDown" Click="btnVarOfCurWordVoteDown_Click" Content="Down"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="2" Margin="357.6,0,0.4,-0.2" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" d:IsHidden="True">
                <Label x:Name="lblUsersOnline" Content="Online users" d:IsHidden="True"/>
                <ListBox x:Name="lstUsersOnline" MinWidth="100" ItemsSource="{Binding Users}" ItemTemplate="{StaticResource UserItemTemplate}" d:IsHidden="True"/>
            </StackPanel>
            <StackPanel x:Name="panelUsedWords" Grid.Row="1" d:IsHidden="True">
                <Label x:Name="lblUsedWords" Content="UsedWords" d:IsHidden="True"/>
                <ListBox x:Name="lstUsedWords" MinWidth="100" ItemsSource="{Binding UsedWords}" d:IsHidden="True"/>
            </StackPanel>
        </Grid>
        <StackPanel x:Name="HostWaitQuestion" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="427" Grid.ColumnSpan="3" Margin="0,0,0,-0.2">
            <Label Content="Ожидаем участников." Margin="10,0,0.2,0"/>
            <Label Content="Вы загадали слово:" Margin="10,40,302.2,0"/>
            <TextBox Name="txtPrimaryWord" Height="23" TextWrapping="Wrap" Text="" Margin="125,-25,10.2,0"/>
            <Label Content="Открытые буквы слова:" Margin="10,10,10.2,0"/>
            <Label Content="{Binding PrimaryWordKnownLetters}" Margin="10,5,10.2,0"/>

        </StackPanel>
        <StackPanel Name="HostChiefWord" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="427" Grid.ColumnSpan="3" Margin="0,0,0,-0.2" d:IsHidden="True">
            <Label Content="Участник предложил вопрос:" Height="25" Margin="10,10,10.2,0"/>
            <TextBox Name="txtCurrentQuestion" Text="{Binding Question}" Height="50" TextWrapping="Wrap" Margin="10,0,10.2,0"/>
            <Label Content="Открытые буквы слова:" Margin="10,10,10.2,0"/>
            <Label Content="{Binding PrimaryWordKnownLetters}" Margin="10,5,10.2,0"/>
            <Label Content="Ваш ответ:" Margin="10,10,10.2,0"/>
            <TextBox Name="txtChiefWord" Height="23" TextWrapping="Wrap" Text="" Margin="10,10,107.2,0"/>
            <Button Name="btnHostHaveChiefWord" Content="Ok" Margin="325,-25,82.2,0" Height="17" RenderTransformOrigin="0.5,0.506" Click="btnHostHaveChiefWord_Click"/>
        </StackPanel>
        <StackPanel x:Name="VotingForChiefWord" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="427" Grid.ColumnSpan="3" Margin="0,0,0,-0.2" d:IsHidden="True">
            <Label Content="Голосование за слово представленное ведущим" Margin="10,0,10.2,0" d:IsHidden="True"/>
            <TextBox Name="txtChiefVote" Height="24" TextWrapping="Wrap" Text="{Binding ChiefWord}" Margin="10,35,277.2,0" d:IsHidden="True"/>
            <Button Name="btnVoteForChiefWord_Agree" Content="V" Margin="160,-54,242.2,0" Height="19" RenderTransformOrigin="0.504,0.5" Click="btnVoteForChiefWord_Agree_Click" d:IsHidden="True"/>
            <Button Name="btnVoteForChiefWord_Disagree" Content="X" Margin="160,-10,242.2,0" Height="20" RenderTransformOrigin="0.504,0.51" Click="btnVoteForChiefWord_Disagree_Click" d:IsHidden="True"/>
        </StackPanel>
        
        <StackPanel x:Name="Lobby" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="432" Grid.ColumnSpan="3" Margin="0,0,0,-0.2" d:IsHidden="True">
            <ListBox x:Name="lstRooms" HorizontalAlignment="Right" VerticalAlignment="Top" MinHeight="200" MinWidth="300" ItemsSource="{Binding Rooms}" ItemTemplate="{StaticResource RoomItemTemplate}" MouseDoubleClick="LstRooms_OnMouseDoubleClick" RenderTransformOrigin="0.5,0.5" Height="160" Width="295" Margin="0,50,107,0"/>
            <Button x:Name="btnCreateRoom" Content="Создать новую комнату" Margin="175,10,117,0" Click="btnCreateRoom_Click"/>
            <TextBox Name="txtRoomName" Height="20" TextWrapping="Wrap" Text="" Margin="25,-20,262,0"/>
        </StackPanel>
        <Button Name="btnLeaveRoom" Content="LeaveRoom" Grid.Column="2" HorizontalAlignment="Left" Margin="133.6,287,0,0" VerticalAlignment="Top" Width="75" Click="btnLeaveRoom_Click" d:IsHidden="True"/>

        <StackPanel x:Name="HaveNoPrimaryWord" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="309" VerticalAlignment="Top" Width="410" FlowDirection="RightToLeft" d:IsHidden="True">
            <TextBox x:Name="txtSetPrimaryWord" Height="23" TextWrapping="Wrap" Margin="0,0,0,0"/>
            <Button x:Name="btnSetPrimaryWord" Content="Загадать" Height="24" Margin="0,0,358,0" Click="btnSetPrimaryWord_Click"/>
        </StackPanel>




    </Grid>
</Window>